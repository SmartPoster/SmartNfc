<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rovanyaina.smartposternfc.MainActivity"
    android:background="#d7d7d7">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:src="@drawable/ity"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="395dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageMap"
        android:src="@drawable/marker"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Localisation"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/appel" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCall"
        android:src="@android:drawable/ic_menu_call"
        android:layout_below="@+id/imageMap"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/imageMail"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/appel"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/imageCall"
        android:layout_toStartOf="@+id/imageMail" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageMail"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_gravity="center"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageCall"
        android:layout_toEndOf="@+id/maill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/maill"
        android:layout_gravity="center|top"
        android:layout_marginStart="42dp"
        android:layout_alignTop="@+id/imageMail"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textdesc"
        android:layout_gravity="right|left"
        android:textSize="50px"
        android:textColor="#000000"
        android:layout_above="@+id/imageMap"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="78dp" />
</RelativeLayout>
